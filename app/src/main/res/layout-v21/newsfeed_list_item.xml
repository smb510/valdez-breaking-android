<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:id="@+id/story_container">

        <TextView
            android:id="@+id/headline"
            style="@style/HeadlineTextApperance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/event_date"
            style="@style/StoryTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/headline"
            android:gravity="end"
            android:layout_toEndOf="@id/headline" />

        <TextView
            android:id="@+id/body"
            style="@style/StoryTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/headline" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/action_container"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="6dp"
        android:padding="6dp"
        android:layout_alignTop="@id/story_container"
        android:layout_alignBottom="@id/story_container">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/share_button"
            android:layout_gravity="center_vertical"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_share_black_24dp" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:id="@+id/favorite_button"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_star_border_black_24dp" />
    </LinearLayout>

</RelativeLayout>