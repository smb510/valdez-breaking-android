<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/app_500</item>
        <item name="android:colorPrimaryDark">@color/app_700</item>
        <item name="android:colorAccent">@color/accent_200</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/app_100</item>
    </style>

    <style name="HeadlineTextApperance" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_700</item>
    </style>

    <style name="StoryTextAppearance" parent="android:Widget.Material.Light.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>
